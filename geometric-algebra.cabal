-- Initial geometric-algebra.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                geometric-algebra
version:             0.4.0
synopsis:            Geometric algebra calculations in Haskell
description:         
  Library for (hopefully) elegant computations using geometric algebra. Built for understanding, not speed.
license:             MIT
license-file:        LICENSE
author:              Pontus Granström
maintainer:          pnutus@gmail.com
copyright:           © 2014 Pontus Granström
category:            Math
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:    Numeric.GeometricAlgebra
                      Numeric.GeometricAlgebra.Metric.Conformal,
                      Numeric.GeometricAlgebra.Metric.Spacetime,
                      Numeric.GeometricAlgebra.Metric.Euclidean
  other-modules:      Numeric.GeometricAlgebra.BasisBlade, 
                      Numeric.GeometricAlgebra.Multivector,
                      Numeric.GeometricAlgebra.Metric,
                      Numeric.LinearCombination
  other-extensions:   TemplateHaskell
  hs-source-dirs:     src
  default-language:   Haskell2010
  build-depends:      base    == 4.6.*, 
                      digits  == 0.2.*,
                      ieee754 == 0.7.*,
                      hmatrix
  
test-suite tests
  type:               exitcode-stdio-1.0
  main-is:            MainTests.hs
  hs-source-dirs:     tests, src
  default-language:   Haskell2010
  build-depends:      base           == 4.6.*, 
                      QuickCheck     == 2.6.*, 
                      test-framework,
                      test-framework-th,
                      test-framework-quickcheck2,
                      digits  == 0.2.*,
                      ieee754 == 0.7.*,
                      hmatrix
                      
source-repository head
  type:       git
  location:   git@github.com:pnutus/geometric-algebra.git 
  -- git://github.com/pnutus/geometric-algebra.git
  
source-repository this
  type:       git
  location:   git@github.com:pnutus/geometric-algebra.git
  tag:        v0.4.0